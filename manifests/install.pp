# == Class: puppetapply::install
#
class puppetapply::install {
  vcsrepo { '/root/puppet':
    ensure     => latest,
    provider   => git,
    source     => $puppetapply::source,
    user       => root,
    submodules => true,
    require    => [File_line['bitbucket'], File_line['github'], Package['git']],
  }

  if !defined(File['/root/.ssh']) {
    file { '/root/.ssh':
      ensure => directory,
      mode   => '0700',
      owner  => 'root',
      group  => 'root',
    }
  }

  if !defined(File['/root/.ssh/known_hosts']) {
    file { '/root/.ssh/known_hosts':
      ensure  => present,
      mode    => '0744',
      owner   => 'root',
      group   => 'root',
      require => File['/root/.ssh']
    }
  }

  file_line { 'bitbucket':
    path    => '/root/.ssh/known_hosts',
    line    => 'bitbucket.org ssh-rsa ',
    require => File['/root/.ssh/known_hosts'],
  }

  file_line { 'github':
    path    => '/root/.ssh/known_hosts',
    line    => 'github.com ssh-rsa ',
    require => File['/root/.ssh/known_hosts'],
  }

  if $::packerbuild {
    file { '/root/.ssh/id_rsa':
      ensure  => file,
      mode    => '0400',
      content => $puppetapply::ssh_key,
    }
    File['/root/.ssh/id_rsa'] ~> Vcsrepo['/root/puppet']
  }

  if !defined(Package['git']) {
    package { 'git':
      ensure => installed,
    }
  }
}
